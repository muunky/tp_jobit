{% extends 'base.html.twig' %}

{% block title %}Hello JobController!
{% endblock %}
{% block stylesheets %}
	<link rel="stylesheet" href="/css/style.css">
{% endblock %}
{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>
	<header>
		<input type="text">
	</header>
	<div class="par">
		<div class="child">


			<h2>{{job.entreprise}}</h2>
			<div id="pouet">
				<hr>
				<h1>{{job.contrat}}</h1>
				<hr>
			</div>
			<img src="{{job.logo}}" alt="{{job.logo}}">
			<p>{{job.description}}</p>
			<table>
				<tr>
					<td>pays :
						{{job.pays}}</td>
					<td>
						-
					</td>
					<td>
						ville :{{job.lieu}}</td>
				</tr>
			</table>
			<p>{{job.postuler}}</p>
			<p>{{job.categorie}}</p>
			<a href="{{job.url}}" class="btn btn-primary">la page de l'entreprise</a>
			<p>créé le
				{{job.created}}</p>
		</div>
	</div>
	{% block javascripts %}

		<script>
			$('.dropdown-toggle').dropdown();
		</script>
	{% endblock %}
{% endblock %}
